<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="product.info.addtocart">
            <block name="product.info.addtocart.buyNow" template="Magento_PaymentRequestApi::button.phtml" before="-">
                <arguments>
                    <argument name="jsLayout" xsi:type="array">
                        <item name="components" xsi:type="array">
                            <item name="buy-now" xsi:type="array">
                                <item name="component" xsi:type="string">Magento_PaymentRequestApi/js/view/buy-now</item>
                                <item name="config" xsi:type="array">
                                    <item name="template" xsi:type="string">Magento_PaymentRequestApi/buy-now</item>
                                </item>
                            </item>
                        </item>
                    </argument>
                </arguments>
            </block>
        </referenceBlock>
        <referenceBlock name="product.info.addtocart.additional">
            <block name="product.info.addtocart.buyNow.additional" template="Magento_PaymentRequestApi::button.phtml" before="-">
                <arguments>
                    <argument name="jsLayout" xsi:type="array">
                        <item name="components" xsi:type="array">
                            <item name="buy-now" xsi:type="array">
                                <item name="component" xsi:type="string">Magento_PaymentRequestApi/js/view/buy-now</item>
                                <item name="config" xsi:type="array">
                                    <item name="template" xsi:type="string">Magento_PaymentRequestApi/buy-now</item>
                                </item>
                            </item>
                        </item>
                    </argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
